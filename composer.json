{
    "name": "nsrosenqvist/php-layout",
    "description": "A declarative HTML layout engine using ASCII box-drawing syntax",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PhpLayout\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpLayout\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "scripts": {
        "test": "phpunit --testdox",
        "test:unit": "phpunit --testsuite=unit --testdox",
        "test:e2e": "phpunit --testsuite=e2e --testdox",
        "test:coverage": "phpunit --coverage-html=coverage",
        "analyze": "phpstan analyze --memory-limit=256M",
        "analyze:baseline": "phpstan analyze --memory-limit=256M --generate-baseline",
        "analyse": "@analyze",
        "analyse:baseline": "@analyze:baseline",
        "format": "php-cs-fixer fix --config=.php-cs-fixer.php",
        "format:check": "php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff",
        "check": [
            "@format:check",
            "@analyze",
            "@test"
        ],
        "preview": [
            "@test:e2e",
            "@php tests/E2E/scripts/open-preview.php"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
