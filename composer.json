{
    "name": "nsrosenqvist/php-layout",
    "description": "A declarative HTML layout engine using ASCII box-drawing syntax",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PhpLayout\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpLayout\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "brianium/paratest": "^7.8",
        "friendsofphp/php-cs-fixer": "^3.64",
        "nsrosenqvist/phpdoc-validator": "^1.1.2",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "test": "paratest --testdox",
        "test:unit": "paratest --testsuite=unit --testdox",
        "test:e2e": "phpunit --testsuite=e2e --testdox",
        "test:coverage": "paratest --coverage-html=coverage",
        "typecheck": "phpdoc-validator src/",
        "analyze": "phpstan analyze --memory-limit=256M",
        "analyze:baseline": "phpstan analyze --memory-limit=256M --generate-baseline",
        "analyse": "@analyze",
        "analyse:baseline": "@analyze:baseline",
        "format": "php-cs-fixer fix --config=.php-cs-fixer.php",
        "format:check": "php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff",
        "check": [
            "@format:check",
            "@typecheck",
            "@analyze",
            "@test"
        ],
        "preview": [
            "@test:e2e",
            "@php tests/E2E/scripts/open-preview.php"
        ],
        "preview:responsive": [
            "@test:e2e",
            "@php tests/E2E/scripts/open-responsive-preview.php"
        ],
        "preview:holy-grail": [
            "@test:e2e",
            "@php tests/E2E/scripts/open-responsive-preview.php holy-grail"
        ],
        "preview:blog": [
            "@test:e2e",
            "@php tests/E2E/scripts/open-responsive-preview.php blog"
        ],
        "preview:progressive": [
            "@test:e2e",
            "@php tests/E2E/scripts/open-responsive-preview.php progressive"
        ],
        "preview:all": [
            "@test:e2e",
            "@php tests/E2E/scripts/open-responsive-preview.php all"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
