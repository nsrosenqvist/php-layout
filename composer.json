{
    "name": "php-layout/php-layout",
    "description": "A declarative HTML layout engine using ASCII box-drawing syntax",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PhpLayout\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpLayout\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=unit",
        "test:e2e": "phpunit --testsuite=e2e",
        "test:coverage": "phpunit --coverage-html=coverage",
        "analyse": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.php",
        "cs-check": "php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff",
        "qa": ["@cs-fix", "@analyse", "@test"],
        "preview": ["@test:e2e", "@php -S localhost:8080 -t output"]
    },
    "config": {
        "sort-packages": true
    }
}
